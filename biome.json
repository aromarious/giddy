{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "extends": ["ultracite/biome/core"],
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "!node_modules",
      "!dist",
      "!build",
      "!coverage",
      "!.wrangler",
      "!drizzle"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 20
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
